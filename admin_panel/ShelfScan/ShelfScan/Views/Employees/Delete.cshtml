@model ShelfScan.Models.ApiEmployee

@{
    ViewData["Title"] = "Удалить";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Удалить</h1>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
    <div class="card">
        <div class="card-header">
            <h3>Вы уверены, что хотите удалить данную запись?</h3>
        </div>
        <!-- /.card-header -->
        <div class="card-body">

            <div>
                <h4>Сотрудник</h4>
                <hr />
                <dl class="row">
                    <dt class="col-sm-2">
                        Имя
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.FirstName)
                    </dd>
                    <dt class="col-sm-2">
                        Фамилия
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.LastName)
                    </dd>
                    <dt class="col-sm-2">
                        Номер телефона
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Phone)
                    </dd>
                    <dt class="col-sm-2">
                        Пароль
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.HashedPassword)
                    </dd>
                    <dt class="col-sm-2">
                        Роль
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Role.Name)
                    </dd>
                </dl>

                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <input type="submit" value="Удалить" class="btn btn-danger" /> |- - -|
                    <a asp-action="Index">Вернуться к списку</a>
                </form>
            </div>
        </div>
        <!-- /.card-body -->
    </div>
    <!-- /.card -->
</section>
<!-- /.content -->
